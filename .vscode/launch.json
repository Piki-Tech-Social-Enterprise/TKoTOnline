{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Firebase Emulator Functions (LOCAL)",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "firebaseEmulatorFunctionsLocal"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "cwd": "${workspaceFolder}/PWA",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Firebase Emulator Functions (LOCAL)",
      "port": 9229,
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}"
    }
  ]
}